<header class="screen-only">
  <nav class="navbar is-fixed-top is-transparent" aria-label="dropdown navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{fileNamePrefix}}index.html">
        <img src="img/metalab.png" alt="{{libraryName}} Logo">
      </a>

      <a role="button" id="navbar-burger" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="mainNav">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="mainNav" class="navbar-menu">
      <div class="navbar-start">
        <div class="is-hidden-desktop">
          <div class="navbar-item buttons is-inline-block">
            <a class="button is-link is-light" href="search.html">
              {{ _( "Search" ) }}
            </a>
          </div>
          <div class="navbar-item buttons is-inline-block">
            <a href="{{fileNamePrefix}}imprint.html" class="button is-link is-light">
              {{ _( "Imprint" ) }}
            </a>
          </div>
          <div class="navbar-item buttons is-inline-block">
            <a href="https://github.com/Metalab/library-opac" target="_blank" class="button is-link is-light">
              {{ _( "Source Code" ) }}
            </a>
          </div>
          <div class="is-inline-block">
            {% for locale_flag in locales %}
              {% if locale_flag == defaultLocale %}
                <a class="navbar-item is-inline-block" href="{{targetFilenameWithoutPrefix}}">
              {% else %}
                <a class="navbar-item is-inline-block" href="{{locale_flag}}{{targetFilenameWithoutPrefix}}">
              {% endif %}
                <img src="img/locales/{{locale_flag}}.png" alt="{{locale_flag}}">
              </a>
            {% endfor %}
          </div>
        </div>
        {% for menuLocation in locations %}
          <div class="navbar-item has-dropdown is-hoverable {% if location == menuLocation %}active{% else %}not-active{% endif %}">
            <a class="navbar-link" href="{{fileNamePrefix}}location_{{menuLocation | replace(" ", "")}}.html">
              {{menuLocation}}
            </a>
            <div class="navbar-dropdown">
              {% for locationTmp, categories in locationsAndCategories.items() %}
                {% if locationTmp == menuLocation %}
                  {% for category in categories %}
                    <a class="navbar-item" href="{{fileNamePrefix}}location_{{menuLocation | replace(" ", "")}}.html#{{category | replace(" ", "")}}">
                      {{category}}
                    </a>
                  {% endfor %}
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endfor %}
        <span class="navbar-item is-hidden-desktop">
          {{ _( "Generation Time" ) }}: {{generationTime}}
        </span>
      </div>
      <div class="navbar-end is-hidden-mobile">
        <div class="navbar-item buttons">
          <a class="button is-link is-light" href="{{fileNamePrefix}}search.html">
            {{ _( "Search" ) }}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>
